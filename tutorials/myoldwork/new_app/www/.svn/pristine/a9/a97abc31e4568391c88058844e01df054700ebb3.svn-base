@import "compass/utilities"
@import "compass/css3"
@import "compass/layout/stretching"

$experimental-support-for-khtml: false

body
  font-family: "Lato", "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-weight: 300

a
  &:focus
    outline: none
  &::-moz-focus-inner
    border: 0

google-map, google-chart, jasper-embed
  display: block
  width: auto

$infoRowHeight: 50px
$headerRowHeight: 35px
$headerColor: #18416d
$navAnchorArrowSize: 4px
$headerTextColor: #d8e2f0
$headerTextHighlightColor: #f3cf77
$headerTextHoverColor: #fff
$secondaryNavColor: #fff

.alert
  text-align: center

.highlight
  background-color: #FFFF00

.nova-header
  position: relative
  z-index: 100
  width: 100%
  height: $headerRowHeight * 2
  background: url("images/nova-top-left.png") top left no-repeat, url("images/nova-top-right.png") top right no-repeat
  background-color: $headerColor

  .nova-nav
    position: relative
    +horizontal-list(10px)
    overflow: visible

  a
    color: $headerTextColor
    text-decoration: none
    padding-bottom: 5px
    &:hover
      color: $headerTextHoverColor

  .nova-header-top
    height: $headerRowHeight
    padding: 10px 15px 0px
    overflow: visible

    .nova-nav
      +horizontal-list(5px)
      overflow: visible
      
      li
        width: 100%

    .nova-logo
      float: left
      height: 100%
      width: 133px
      background: url("images/nova-logo.png") top left no-repeat
      background-size: 133px

    .nova-user
      float: right
      padding-top: 3px

      a
        display: block

  .nova-header-bottom
    width: 100%
    position: absolute
    bottom: 0
    background: url("images/nova-bottom-right.png") bottom right no-repeat
    height: $headerRowHeight
    line-height: $headerRowHeight

    &.affix
      position: fixed
      top: 0
      bottom: auto
      z-index: 100
      background-color: $headerColor

    .nova-primary-nav
      padding-left: 15px

      li
        &:hover
          a
            color: $headerTextHoverColor

      li
        a.active
          &:after
            content: ""
            width: 0
            height: 0
            border-right: $navAnchorArrowSize solid transparent
            border-left: $navAnchorArrowSize solid transparent
            border-bottom: $navAnchorArrowSize solid $secondaryNavColor
            margin-left: -1 * ($navAnchorArrowSize / 2)
            position: absolute
            bottom: 0
            left: 50%

      a
        position: relative
        display: block
        padding: 0 0
        
        &.active
          color: $headerTextHighlightColor

.nova-infobar
  +clearfix
  height: $infoRowHeight
  line-height: $infoRowHeight
  background-color: #fff
  border-bottom: solid 1px #cacaca
  padding: 0 15px
  width: 100%
  overflow: visible

  &.affix
    position: fixed
    top: 35px
    bottom: auto
    z-index: 100

  a
    color: #3f73b9
    text-decoration: none
    &:hover, &:active
      color: #13162d

  .nova-secondary-nav
    float: left
    list-style: none
    -webkit-padding-start: 0px
    margin-bottom: -5px

    > li
      padding-right: 15px

      > a
        padding: 8px 8px 8px 8px
        display: inline

      &.active
        > a


      .dropdown-menu > .active >a, .dropdown-menu > .active > a:hover, .dropdown-menu > .active>a:focus 
        color: $headerColor
        text-decoration: none
        background-color:  $headerTextColor
        outline: 0


    .dropdown
      .caret
        color: $headerTextColor

      &:hover
        .caret

 
    .breadcrumb
      padding: 0 0
      margin-bottom: 0
      background-color: inherit
      border-radius: 0
      font-size: 14px
      position: relative

      &:last-child > a:after
        content: ""

      &.active
        a
          font-weight: bold
      

    .dropdown-menu
      top: 41px

  .nova-toolbar
    float: right

    .nova-toolbar-buttons
      +horizontal-list(10px)
      overflow: visible
      font-size: 16px

      .active
        color: #13162d

      .dropdown-menu
        top: 38px
        right: 0
        left: inherit
        min-width: 100px
        
        li:first-child
          padding-left: 10px

.list-sep:after
  font-family: FontAwesome
  content: "\f101"
  color: #cacaca

.list-sep
  padding-left: 8px
  padding-right: 8px


$novaPanelWidth: 300px
$novaPanelToggleWidth: 20px

.nova-container

  .nova-report-container
    display: table
    table-layout: fixed
    width: 100%
    min-height: 650px

    .nova-report
      display: table-row

      .nova-panel
        display: table-cell
        vertical-align: top
        background-color: #f3f3f3
        padding: 5px 0
        border-right: solid 1px #cacaca
        +box-sizing(content-box)

        &.open
          width: $novaPanelWidth
        
        &.open-add-x
          -webkit-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all
          -moz-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all
          -ms-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all
          -o-transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all
          transition: 300ms cubic-bezier(0.250, 0.250, 0.750, 0.750) all
          
        &.closed
          width: $novaPanelToggleWidth

          .nova-panel-content
            display: none

        .nova-panel-content
          float: left
          width: $novaPanelWidth - $novaPanelToggleWidth
          padding-left: 10px
          min-height: 550px
          margin-top: 15px

        .nova-widget-heading
          font-weight: bold
          margin-bottom: 5px
          
        .nova-widget-body
          
        .nova-widget
          padding: 10px
          
          ul.list-group
            margin-bottom: 0px

        .nova-panel-toggle
          float: right
          width: $novaPanelToggleWidth
          text-align: center

      .nova-content
        position: relative
        display: table-cell
        vertical-align: top
        padding: 0px 0px 0 0px
        width: auto
        overflow-x: auto

        .report-name
          position: absolute
          top: 12px
          width: 100%
          text-align: center
          font-size: 14px
          font-weight: bold
          line-height: 16px
          padding: 0px 30px
          margin: 0px

.nova-content
  min-height: 650px
  clear: both

.nova-footer
  padding-top: 8px
  padding-bottom: 10px
  border-top: 1px solid #cacaca
  margin-top: 20px
  text-align: center
  font-size: 12px
  color: #666

.nova-news-list
  img
    float: right
    margin-right: 5px
    max-width: 75px

  h2, p
    overflow: hidden
    font-size: 12px

  h2
    margin-top: 0
    margin-bottom: 3px
  
  .row
    margin-bottom: 5px

.panel-title a
  display: block
  
.embed
  width: 100%
  height: 100%

.nova-toc
  margin-top: 0px

.nova-toc thead
  background: #f6f6f6

.nova-toc th:first-child
  padding-left: 15px

.nova-toc td:first-child
  padding-left: 15px

.nova-page-title
  font-size: 16px
  font-weight: bold
  
.nova-toolbar form
  margin-top: -2px

.table>tbody>tr>td, .table>tbody>tr>th, .table>tbody+tbody
  border-top: none

.toc-category-name
  font-weight: bold
  
.toc-report-name
  padding-left: 3.0em

.toc-report-name:before
  content: '\f080' 
  font-family: FontAwesome
  display: inline-block
  margin-left: -2.0em
  width: 2.0em
  
.toc-report-desc
  margin-right: 15px
  
.table-striped tbody > tr:nth-child(odd) > td, .table-striped tbody > tr:nth-child(odd) > th
  background-color: inherit

.table-striped tbody > tr:nth-child(even) > td, .table-striped tbody > tr:nth-child(even) > th
  background-color: #f6f6f6

.caption
  text-align: center

.jasper-control
  margin-bottom: 5px

.dropdown-right
  right: 0
  left: auto

.nova-header-top .nova-nav .dropdown-menu li:first-child
  padding-left: 5px
  
.nova-home
  margin-top: 30px
  min-height: 575px

  .box
    width: 400px
    margin-top: 50px
    margin-bottom: 50px
    border: 1px solid #c0c0c0
    border-radius: 8px
    padding: 0 15px 15px 15px
    margin-left: auto
    margin-right: auto

  .nova-widget
    border: 1px solid #ccc
    padding: 0px
    margin-bottom: 15px
    
    h3
      font-size: 14px
      font-weight: bold
      background-color: #eee
      margin: 0
      padding: 6px
      
    .nova-widget-content
      padding: 10px 15px

      .nova-widget-reports
        display: table-row

      .nova-widget-report
        display: inline-block
        width: 50%
        padding: 5px
        
        img
          width: 100%


h3.heading
  text-align: center
  margin-top: 10px

.nav-test
  margin-left: 20px
  font-size: 14px

.toc-report-name:hover .toc-report-actions
  visibility: visible
  
.toc-report-actions
  visibility: hidden
  display: inline
  margin-left: 8px
  
.toc-report-actions a
  margin-right: 4px

td.toc-report-name-col
  min-width: 250px

.wee
  font-size: .2px

.favorite
  color: #e3cf7a

.settings
  margin: 30px
  min-height: 550px
  
  .tab-content
    padding-top: 30px
    
    .tab-pane


.related-report-list
  list-style: none
  padding: 6px 12px
  background-color: #fff
  border: 1px solid #ccc
  border-radius: 4px

  li
    margin-bottom: 2px
    

.ui-slider
  background: #660000

  .ui-slider-range
    background: #cc9900
    z-index: 0


.greendiv 
  float: right
  height: 100%
  background: #006600
  border-radius: 0 4px 4px 0

.slider-mask
  opacity: .6
  background-color: #fff
  height: 100%
  width: 100%
  z-index: 1
  
.widget-normal
  padding: 6px 12px
  background-color: #fff
  border: 1px solid #ccc
  border-radius: 4px

.slider-values
  font-size: 12px
  margin-top: 15px
  margin-left: 5px

  td
    padding-bottom: 5px

  input
    width: 60px
    padding-left: 2px

.combo
  .input-group-btn
    position: static
  .dropdown-menu
    min-width: 100%
  
  
.sidepanel-control
  margin-top: 5px

.centered
  position: fixed
  top: 50%
  left: 50%
  margin-top: -50px
  margin-left: -100px
  width: 200px
  min-height: 40px

.show-hide
  padding: 10px

.show-hide.ng-hide-add, .show-hide.ng-hide-remove
  -webkit-transition: all linear 0.8s
  -moz-transition: all linear 0.8s
  -o-transition: all linear 0.8s
  transition: all linear 0.8s
  display: block!important
 
.show-hide.ng-hide-add.ng-hide-add-active,
.show-hide.ng-hide-remove
  opacity: 0

.show-hide.ng-hide-add,
.show-hide.ng-hide-remove.ng-hide-remove-active
  opacity: 1

.nova-error
  color: #a52a2a
  font-weight: bold
